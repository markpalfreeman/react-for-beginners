/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order
  &-enter
    transition all 0.5s
    transform translateX(-120%);
    height 0

    &
      &-active
        transform translateX(0);
        height auto

  &-leave
    transition all 0.3s
    transform translateX(0)

    &
      &-active
        transform translate(-60%, -80%) scale(0.8) rotate(-90deg)
        opacity 0


.count
  &-enter
    transition all 0.3s
    transform translateY(100%) // Start *below* existing count

    &
      &-active
        transform translateY(0) // End at normal position

  &-leave
    transition all 0.3s
    position absolute !important
    left: 0
    bottom: 0
    transform translateY(0) // Start at normal position

    &
      &-active
        transform translateY(-100%) // End *above* existing count
